<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/site")
</head>
<body>
    <div id="header">
        <h1><a href="/">网易云音乐</a></h1>
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">首页</a></li>
            <li><a href="@Url.Content("~/Store/")">商店</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            <li><a href="@Url.Content("~/StoreManager/")">管理员</a></li>
        </ul>        
    </div>

    @{Html.RenderAction("GenreMenu", "Store");}

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
         <a href="/">网易云音乐</a>
    </div>

    @Scripts.Render("~/scripts/jquery")
</body>
</html>